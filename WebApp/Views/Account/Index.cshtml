@model WebApp.Models.AccountIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>@Model.Message</p>

<h2>Your characters</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Level</th>
            <th>Profession</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GetCharactersByPlayerIdResponse.Characters)
        {
            <tr>
                <td>@item.Level</td>
                <td>@item.Profession</td>
                <td>@item.Name</td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Logout", "Account")">Log out of this account</a>